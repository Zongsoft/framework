<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Version>1.1.0</Version>
		<Product>Zongsoft OpenTelemetry gRPC Server Protocols</Product>
		<Description>This is a gRPC server protocol library of OpenTelemetry.</Description>
		<IncludeSymbols>true</IncludeSymbols>
		<IsPackable>true</IsPackable>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageProjectUrl>https://github.com/Zongsoft/Framework</PackageProjectUrl>
		<RepositoryUrl>https://github.com/Zongsoft/Framework/tree/master/Zongsoft.Diagnostics/protocols/server</RepositoryUrl>
	</PropertyGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Protobuf_NoWarnMissingExpected>true</Protobuf_NoWarnMissingExpected>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Google.Protobuf" VersionOverride="3.33.3" />
		<PackageReference Include="Grpc.Core.Api" VersionOverride="2.76.0" />
		<PackageReference Include="Grpc.Net.Common" VersionOverride="2.76.0" />
		<PackageReference Include="Grpc.Net.Client" VersionOverride="2.76.0" />
		<PackageReference Include="Grpc.Tools" VersionOverride="2.76.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<Protobuf Include="..\..\..\proto\opentelemetry\proto\**\*.proto"
		          ProtoRoot="..\..\..\proto"
		          OutputDir="%(RelativePath)Properties\generated"
		          GrpcServices="Server"
		          CompileOutputs="false" />
	</ItemGroup>

	<Choose>
		<When Condition="$(Configuration)=='Debug'">
			<ItemGroup>
				<Reference Include="Zongsoft.Core">
					<HintPath>..\..\..\..\Zongsoft.Core\src\bin\$(Configuration)\$(TargetFramework)\Zongsoft.Core.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Zongsoft.Core" VersionOverride="7.28.0" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<ItemGroup>
		<None Include="$(MSBuildProjectName).deploy" Link=".deploy" Pack="true" PackagePath="\.deploy" />
		<None Include="$(MSBuildProjectName).plugin" Pack="true" PackagePath="\artifacts" />
		<None Include="$(MSBuildProjectName).option" Pack="true" PackagePath="\artifacts" />
	</ItemGroup>
</Project>
