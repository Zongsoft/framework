<?xml version="1.0" encoding="utf-8" ?>

<options>
	<option path="/Diagnostics">
		<diagnostor>
			<meters>
				<filter>*</filter>

				<exporters>
					<exporter exporter.name="telemetry" settings="protocol=grpc;processorType=batch;timeout=30s;interval=15s;" />
					<exporter exporter.name="prometheus" settings="path=/metrics;totalSuffix=true;cacheDuration=300ms" />
				</exporters>
			</meters>

			<traces>
				<filter>*</filter>

				<exporters>
					<exporter exporter.name="telemetry" settings="protocol=grpc;processorType=batch;timeout=30s;interval=15s;" />
					<exporter exporter.name="zipkin" settings="server=http://localhost:9411/api/v2/spans;maxPayloadSize=4096;useShortTraceIds=true;processorType=batch;timeout=30s;interval=15s;" />
				</exporters>
			</traces>
		</diagnostor>
	</option>
</options>