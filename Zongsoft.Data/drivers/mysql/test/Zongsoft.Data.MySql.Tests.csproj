<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<IsPackable>false</IsPackable>
		<IsTestProject>true</IsTestProject>
		<RootNamespace>Zongsoft.Data.MySql.Tests</RootNamespace>
		<GenerateDocumentationFile>false</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<Reference Include="Zongsoft.Core">
			<HintPath>..\..\..\..\Zongsoft.Core\src\bin\$(Configuration)\$(TargetFramework)\Zongsoft.Core.dll</HintPath>
		</Reference>
		<Reference Include="Zongsoft.Data">
			<HintPath>..\..\..\src\bin\$(Configuration)\$(TargetFramework)\Zongsoft.Data.dll</HintPath>
		</Reference>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\src\Zongsoft.Data.MySql.csproj" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Caching.Memory" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" />
		<PackageReference Include="xunit" />
		<PackageReference Include="xunit.core" />
		<PackageReference Include="xunit.assert" />
		<PackageReference Include="xunit.analyzers" />
		<PackageReference Include="xunit.runner.msbuild" />
		<PackageReference Include="xunit.runner.visualstudio" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\..\..\test\Models\Email.cs" Link="Models\Email.cs" />
		<Compile Include="..\..\..\test\Models\MemberModel.cs" Link="Models\MemberModel.cs" />
		<Compile Include="..\..\..\test\Models\MemberType.cs" Link="Models\MemberType.cs" />
		<Compile Include="..\..\..\test\Models\RoleModel.cs" Link="Models\RoleModel.cs" />
		<Compile Include="..\..\..\test\Models\UserModel.cs" Link="Models\UserModel.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\..\test\Zongsoft.Data.Tests.mapping" Link="Zongsoft.Data.Tests.mapping">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Include="..\..\..\test\Zongsoft.Data.Tests-security.mapping" Link="Zongsoft.Data.Tests-security.mapping">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>
