<?xml version="1.0" encoding="utf-8" ?>

<configuration>
	<option path="/Data">
		<connectionSettings>
			<connectionSetting connectionSetting.name="db2" driver="postgres" mode="all" value="db2.connectionString" />
		</connectionSettings>
	</option>

	<option path="/Messaging/Queues">
		<queue queue.name="avm">
			<subscription reliability="MostOnce">
				<topic topic.name="heartbeat" />

				<topic topic.name="uplink">
					<tag />
					<tag>ping</tag>
					<tag>synchronize</tag>
				</topic>

				<topic topic.name="downlink">
					<tag></tag>
					<tag>control</tag>
					<tag>synchronize</tag>
				</topic>
			</subscription>
		</queue>
	</option>
</configuration>
