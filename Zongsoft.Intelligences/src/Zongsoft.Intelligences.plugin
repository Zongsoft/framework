<?xml version="1.0" encoding="utf-8" ?>

<plugin name="Zongsoft.Intelligences"
        title="Zongsoft Intelligences Plugin"
        author="Zongsoft Studio(zongsoft@qq.com)"
        copyright="Copyright(C) Zongsoft Studio. 2025-2025. All rights reserved."
        description="Created Date: 2025-08-08 by Popeye Zhong">

	<manifest>
		<assemblies>
			<assembly name="Zongsoft.Intelligences" />
		</assemblies>
	</manifest>

	<extension path="/Workbench/Configuration/ConnectionSettings/Drivers">
		<object name="Ollama" value="{static:Zongsoft.Intelligences.Ollama.OllamaConnectionSettingsDriver.Instance, Zongsoft.Intelligences}" />
	</extension>

	<extension path="/Workbench/Executor/Commands">
		<object name="AI" />
	</extension>

	<extension path="/Workbench/Executor/Commands/AI">
		<object name="Copilot">
			<copilot.command>
				<object name="Copilot" type="Zongsoft.Intelligences.Commands.CopilotCommand, Zongsoft.Intelligences" />
			</copilot.command>

			<object name="Chat">
				<chat.command>
					<object name="Chat" type="Zongsoft.Intelligences.Commands.ChatCommand, Zongsoft.Intelligences" />
				</chat.command>

				<object name="Open" type="Zongsoft.Intelligences.Commands.Chatting.OpenCommand, Zongsoft.Intelligences" />
				<object name="Close" type="Zongsoft.Intelligences.Commands.Chatting.CloseCommand, Zongsoft.Intelligences" />
				<object name="Clear" type="Zongsoft.Intelligences.Commands.Chatting.ClearCommand, Zongsoft.Intelligences" />
				<object name="History" type="Zongsoft.Intelligences.Commands.Chatting.HistoryCommand, Zongsoft.Intelligences" />
			</object>

			<object name="Model">
				<object name="List" type="Zongsoft.Intelligences.Commands.Modeling.ListCommand, Zongsoft.Intelligences" />
				<object name="Info" type="Zongsoft.Intelligences.Commands.Modeling.InfoCommand, Zongsoft.Intelligences" />
				<object name="Install" type="Zongsoft.Intelligences.Commands.Modeling.InstallCommand, Zongsoft.Intelligences" />
				<object name="Uninstall" type="Zongsoft.Intelligences.Commands.Modeling.UninstallCommand, Zongsoft.Intelligences" />
			</object>
		</object>
	</extension>
</plugin>
